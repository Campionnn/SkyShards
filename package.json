{
  "name": "fusion-calculator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://skyshards.com",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "pnpm run build",
    "deploy": "gh-pages -d dist",
    "deploy:gh-pages": "cross-env GITHUB_PAGES=true pnpm run build && gh-pages -d dist",
    "deploy:surge": "pnpm run build && surge dist --domain skyshards-fusion-calculator.surge.sh",
    "deploy:netlify": "pnpm run build && netlify deploy --prod --dir dist",
    "deploy:vercel": "pnpm run build && vercel --prod"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.2.1",
    "@types/pako": "^2.0.3",
    "@types/react-router-dom": "^5.3.3",
    "@xyflow/react": "^12.10.0",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.525.0",
    "pako": "^2.1.0",
    "react": "^19.1.1",
    "react-custom-scrollbars-2": "^4.5.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.0",
    "remark-gfm": "^4.0.1",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.11",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "7.1.5"
  },
  "packageManager": "pnpm@10.18.1"
}
